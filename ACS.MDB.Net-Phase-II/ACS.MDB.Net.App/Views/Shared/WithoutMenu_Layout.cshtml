<!DOCTYPE html>
<html lang="en">
<head>
    <center>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Advanced Recurring Billing System (ARBS)</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    
    @*Added this tag to disable compatibility view for IE. If user changes browser version explicitly then also compatibiltiy view remains default.*@
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link href="../../Content/themes/base/jquery.ui.all.css" rel="stylesheet" type="text/css" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="/Scripts/CustomModeDialog.MDB.js"></script>
    </center>
</head>

<body>
    <center>
    <header>
        <div>
            <div class="HeaderImage">
                <table cellspacing="0" cellpadding="0" width="100%" class="coaHeader" style="border-bottom: none;">
                    <tbody>
                        <tr>
                            <td width="210px" style="padding: 1px 5px; vertical-align: top;">
                                <img src="../../images/acs-logo.png"></td>
                            <td style="text-align:center; vertical-align: top;">
                                <div class="coaHeaderTitle">Advanced Recurring Billing System (ARBS)</div>
                            </td>
                            <td width="210px">
                                <table border="0" cellspacing="0" cellpadding="0" style="" align="right">
                                    <tbody>
                                        <tr>
                                            <td>
                                                <img style="cursor: pointer; margin-right: 4px;" height="20" width="20" border="0px" id="aboutUs" onclick="OpenAboutUs()" title="About Us" src="../../images/about_us.png">
                                            </td>
                                            <td>
                                                <img style="cursor: pointer; margin-right: 4px;" height="20" width="20" border="0px" id="contactUs" onclick="OpenContactUs()" title="Contact Us" src="../../images/contactus.png">
                                            </td>
                                           @* <td>
                                                <img style="margin-right: 4px;" height="24" width="24" border="0px" title="Page help" src="../../images/PageHelp24.png">
                                            </td>
                                            <td>
                                                <img style="margin-right: 4px;" height="24" width="24" border="0px" title="Help" src="../../images/Help24.png">
                                            </td>
                                            <td>

                                                <img style="margin-right: 4px;visibility:hidden" height="24" width="24" border="0px" onclick="location.href='@Url.Action("LogIn", "Account")'" title="Logout" src="../../images/Logout24.png" />
                                            </td>*@
                                               
                                        </tr>
                                    </tbody>
                                </table>
                                 
                            </td>
                        </tr>
                        <tr>
                           <table width="100%" style="border-top: 1px solid #98c8dc; border-bottom: none;" cellspacing="0" cellpadding="0"  class="coaMenuBar">
                                <tbody>
                                    <tr>
                                        <td>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </tr>
                    </tbody>
                </table>
            </div>      
             <div id="aboutUsDialog" title="About Us" style="overflow: hidden;"></div>
             <div id="contactUsDialog" title="Contact Us" style="overflow: hidden;"></div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div>
                <h3>
                    <p>&copy; @DateTime.Now.Year - Advanced Recurring Billing System (ARBS) Version @System.Configuration.ConfigurationManager.AppSettings["MDBVersion"]</p>
                </h3>
            </div>
        </div>
        <div>
             @if (!string.IsNullOrEmpty(System.Configuration.ConfigurationManager.AppSettings["IsUATEnviroment"]))
                                {
                                        <font color="#FF0000" size="+2"><marquee bgcolor="yellow" >UAT/TRAINING </marquee></font>
                                }
        </div>
    </footer>
        </center>
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
