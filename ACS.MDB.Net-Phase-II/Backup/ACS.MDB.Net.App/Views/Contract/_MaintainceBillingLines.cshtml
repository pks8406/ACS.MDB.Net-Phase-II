    /// Provide auto complete for all Billing Line texts.
    /// This list will have all the billing lines associated for selected contract.
    function SetAutoCompleteForAllBillingLineText() {
        var selectedContractId = '@Model.ContractId';

        var postData = { contractId: selectedContractId };
        $.getJSON("/Contract/GetBillingLineTextByContractID", postData, function (response) {
        }).done(function (response) {
            
