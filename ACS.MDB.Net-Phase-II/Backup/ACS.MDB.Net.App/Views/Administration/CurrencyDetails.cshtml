@model ACS.MDB.Net.App.Models.Currency

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script type="text/javascript">
    SetFocus('#txtCurrencyName');
    //DisableEnterKeyForControl('#txtDivisionName');
</script>

<div style="background: #F9F7FB">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        @Html.HiddenFor(m => m.ID)
        @Html.HiddenFor(m => m.CurrencyId)

        <table style="width: 100%">
            <tr>
                <td>
                    @Html.LabelFor(m => m.CurrencyName, new { @class = "mandatoryLabel" })
                </td>
                <td>
                    @Html.TextBoxFor(m => m.CurrencyName, new { @maxlength = "4", style = "width:200px", @id = "txtCurrencyName" })
                    <br />
                    @Html.ValidationMessageFor(model => model.CurrencyName)
                </td>
            </tr>
            <tr>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(m => m.Description, new { @class = "mandatoryLabel", })
                </td>
                <td>
                    @Html.TextAreaFor(m => m.Description, 2, 1, new { @maxlength = 25, style = "width:200px; resize: none" })
                    <br />
                    @Html.ValidationMessageFor(model => model.Description)
                </td>
            </tr>
            <tr>
                <td style="width: 140px">
                    @Html.LabelFor(m => m.ExchangeRate, new { @class = "mandatoryLabel" })
                </td>
                <td>
                    @Html.TextBoxFor(m => m.ExchangeRate, new { @maxlength = "19", style = "width:200px" })
                    <br />
                    @Html.ValidationMessageFor(model => model.ExchangeRate)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(m => m.IsActive, new { style = "padding-right: 5px;" })
                </td>
                <td>
                    @Html.CheckBoxFor(m => m.IsActive)
                </td>
            </tr>
        </table>
    }
</div>