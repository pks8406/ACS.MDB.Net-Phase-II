@model ACS.MDB.Net.App.Models.Contract


@*<script src="/Scripts/jquery.dataTables.js" type="text/javascript"></script>
<script src="/Scripts/jquery.dataTable.editTable.js" type="text/javascript"></script>*@

<table style="width: 100%">
    <tr>
        <td style="vertical-align: top; width: auto">
           
            <div id="milestone_dialog" title="Add Milestone"></div>
            <div id="milestone" style="width: auto">
                <table cellpadding="0" cellspacing="0" border="0" class="display" id="milestone_tbl" width="100%">
                    <thead>
                        <tr>
                            <th>
                                <input type="checkbox" id="selectallMilestone" />
                            </th>
                            <th>@Html.DisplayNameFor(model => model.ID) </th>
                            <th>@Html.DisplayNameFor(model => model.Milestones[0].InvoiceDate)</th>
                            <th>@Html.DisplayNameFor(model => model.Milestones[0].RenewalStartDate)</th>
                            <th>@Html.DisplayNameFor(model => model.Milestones[0].RenewalEndDate)</th>
                            <th>@Html.DisplayNameFor(model => model.Milestones[0].ActualBillDate)</th>
                            <th>@Html.DisplayNameFor(model => model.Milestones[0].Amount)</th>
                            <th>@Html.DisplayNameFor(model => model.Milestones[0].UpliftForMilestone)</th>
                            <th>@Html.DisplayNameFor(model => model.Milestones[0].MilestoneStatusDescription)</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>              
            </div>
        </td>
    </tr>
</table>
<div id="spinnerForMilestone" style="display: none; width: 100%; height: 100%; position: fixed; text-align: center; border: 0px; vertical-align: central; left: 0; top: 0; z-index: 1000;  background: rgb(255,255,255) url('/Images/Loading.gif') 50% 50% no-repeat; -ms-filter:'alpha(opacity = 50)'; filter: alpha(opacity=50); opacity:0.6; }">
</div>
