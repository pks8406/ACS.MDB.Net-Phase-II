@model ACS.MDB.Net.App.Models.Contract

@*<script src="/Scripts/jquery.dataTables.js" type="text/javascript"></script>
<script src="/Scripts/jquery.dataTable.editTable.js" type="text/javascript"></script>*@

<table style="width: 100%">
    <tr>
        <td style="vertical-align: top; width: auto">
            <div id="ContractMaintenanceLine" style="width: auto">
                <table cellpadding="0" cellspacing="0" border="0" class="display" id="contractMaintenance_tbl" width="100%">
                    <thead>
                        <tr>
                            <th rowspan="2">
                                <input type="checkbox" id="selectallMaintenanceLine" />
                            </th>
                            <th rowspan="2">@Html.DisplayNameFor(model => model.ID) </th>
                            <th rowspan="2">@Html.DisplayNameFor(model => model.ContractMaintenances[0].ActivityCode) </th>
                            <th rowspan="2">@Html.DisplayNameFor(model => model.ContractMaintenances[0].OAJobCodeId)</th>
                            <th rowspan="2">@Html.Label("Annual Amount") </th>
                            @*<th rowspan="2">@Html.DisplayNameFor(model => model.ContractMaintenances[0].BaseAnnualAmount) </th>*@
                            <th rowspan="2">@Html.DisplayNameFor(model => model.ContractMaintenances[0].PeriodFrequency) </th>
                            <th rowspan="2">@Html.DisplayNameFor(model => model.ContractMaintenances[0].FirstPeriodAmount) </th>
                            <th rowspan="2">@Html.DisplayNameFor(model => model.ContractMaintenances[0].FirstPeriodStartDate) </th>
                            <th rowspan="2">@Html.DisplayNameFor(model => model.ContractMaintenances[0].FirstRenewalDate) </th>
                            <th class="ui-state-default" style="text-align: center" colspan="3">@Html.Label("Final Billing Period")</th>
                            <th rowspan="2">@Html.DisplayNameFor(model => model.ContractMaintenances[0].ActivityCode)</th>
                            <th rowspan="2">@Html.DisplayNameFor(model => model.ContractMaintenances[0].Account)</th>
                            <th rowspan="2">@Html.DisplayNameFor(model => model.ContractMaintenances[0].CostCenter)</th>
                            <th rowspan="2">@Html.DisplayNameFor(model => model.ContractMaintenances[0].QTY)</th>
                            <th rowspan="2"></th>
                            <th rowspan="2"></th>
                            <th rowspan="2"></th>
                            <th rowspan="2"></th>
                            <th rowspan="2">@Html.Label("Group")</th>
                            <th rowspan="2"></th>
                            <th rowspan="2"></th>
                        </tr>

                        <tr>
                            <th>@Html.DisplayNameFor(model => model.ContractMaintenances[0].FinalRenewalStartDate) </th>
                            <th>@Html.DisplayNameFor(model => model.ContractMaintenances[0].FinalRenewalEndDate) </th>
                            <th>@Html.DisplayNameFor(model => model.ContractMaintenances[0].EndAmount) </th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
                <div id="contractMaintenance_dialog" title="Add Maintenance Line"></div>
                <div id="contractMaintenanceGroupDialog" title="Billing Details Group"></div>
                <div id="contractMaintenanceGroupConnfirmationDialog" title="Billing Details Group">
                    <p>
                        Please select group preference.
                    </p>
                </div>
                <div id="contractMaintenanceCopy" title="Billing Details Group">
                    <p>
                        Please select preference.
                    </p>
                </div>
            </div>
        </td>
    </tr>
</table>
