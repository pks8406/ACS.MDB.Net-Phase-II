@model IEnumerable<ACS.MDB.Net.App.Models.ContractMaintenance>
@{
   // ViewBag.Title = "Recalculated Milestone";
}

<h2>Recalculated Milestone</h2>

@section Scripts {
    <script src="/Scripts/jquery.dataTables.js" type="text/javascript"></script>
    <script src="/Scripts/jquery.dataTable.editTable.js" type="text/javascript"></script>

    <script type="text/javascript" charset="utf-8">
        
        var milestoneTbl = null;
        var defaultColumnDefs = [{ bSortable: true, aTargets: [0] }, { bVisible: false, aTargets: [1]}];
        var columnDefs = [
                { sWidth: '15%', bSortable: false, aTargets: [0] },
                { sWidth: '15%', bVisible: false, aTargets: [1] },
                { sWidth: '15%', bSortable: true, aTargets: [2] },
                { sWidth: '15%', bSortable: true, aTargets: [3] },
                { sWidth: '10%', sClass: 'right-align', aTargets: [4] },
                { sWidth: '15%', bSortable : true, aTargets: [5] }
            ];

        //setup the table and other features required for this page
        $(document).ready(function () {
            milestoneTbl = $('#milestone_Tbl').editTable({
                //sListURL: '/Administration/CurrencyList',
                sDeleteURL: '',
                //sAddURL: '/Administration/CurrencySave',
                //sUpdateURL: '/Administration/CurrencySave',
                //sNewDialogLoadURL: '/Administration/CurrencyCreate',
                //sEditDialogLoadURL: '/Administration/CurrencyEdit',
                //sDialogDivId: 'currency_dialog',
                //sToolbarSelector: '#div_toolbar',
                //sAddButtonId: 'btn_newcurrency',
                //sEditButtonId: 'btn_editcurrency',
                //sDeleteButtonId: 'btn_deletecurrency',
                iDialogWidth: 400,
                iDialogHeight: 350,
                bAutoWidth: false,
                oColumnDefs: columnDefs,
                sEntityName: 'Currency'
            });

            //Set default focus on search text box
            SetFocus('#milestone_Tbl label input:text');
        });

    </script>
}

<div class="pageTitle">
    Recalculated Milestone
    <hr />
</div>

<table style="width: 100%">
    <tr>
        <td>

            <div>
                <table cellpadding="0" cellspacing="0" border="0" class="display" id="currency_tbl" width="100%">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.CompanyName) </th>
                            <th>@Html.DisplayNameFor(model => model.ContractNumber) </th>
                            <th>@Html.DisplayNameFor(model => model.) </th>
                            <th>@Html.DisplayNameFor(model => model.PeriodFrequency) </th>
                            <th>@Html.DisplayNameFor(model => model.BaseAnnualAmount) </th>
                            <th>@Html.DisplayNameFor(model => model.EndAmount) </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                
                                    <td>@item.CompanyName</td>
                                <td>@item.ContractNumber</td>
                            
                                <td>@item.BaseAnnualAmount</td>
                                <td>@item.EndAmount</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </td>
    </tr>
</table>