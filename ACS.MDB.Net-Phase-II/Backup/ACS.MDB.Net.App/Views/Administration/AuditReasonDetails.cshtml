@model ACS.MDB.Net.App.Models.AuditReason

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script type="text/javascript">
    SetFocus('#txtReasonDescription');
    //DisableEnterKeyForControl('#txtDivisionName');
</script>

<div style="background: #F9F7FB">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        @Html.HiddenFor(m => m.ID) 
        @Html.HiddenFor(m => m.ReasonCode)     

        <table style="width: 100%">
            <tr>
                <td>
                    @Html.LabelFor(m => m.ReasonDescription, new { @class = "mandatoryLabel" })
                </td>
                <td>
                    @Html.TextBoxFor(m => m.ReasonDescription, new { style = "width:250px", @id = "txtReasonDescription" })
                </td>
            </tr>
            <tr>
                <td></td>
                <td colspan="2">
                    @Html.ValidationMessageFor(model => model.ReasonDescription)
                </td>
            </tr>
        </table>
    }
</div>

<script type="text/javascript">

    SetFocus('#txtReasonDescription');
    DisableEnterKeyForControl('#txtReasonDescription');
    DisableInvalidKeyForControl('#txtReasonDescription');
</script>
