@model IEnumerable<ACS.MDB.Net.App.Models.BillingLineTag>

@{
    ViewBag.Title = "MDB::Billing Line Tags";
}

@section Scripts {
    <script src="/Scripts/jquery.dataTables.js" type="text/javascript"></script>
    <script src="/Scripts/jquery.dataTable.editTable.js" type="text/javascript"></script>

    <script type="text/javascript" charset="utf-8">
        // The billing tags data table
        var billingTagTbl = null;
        var columnDefs = [
                { sWidth: '1%', bSortable: false, bVisible: false, aTargets: [0] },
                { sWidth: '30%', bSortable: true, bVisible: true, aTargets: [1] },
                { sWidth: '70%', bSortable: true, bVisible: true, aTargets: [2] }
        ];

        //setup the table and other features required for this page
        $(document).ready(function () {
            billingTagTbl = $('#billingtag_tbl').editTable({
                sListURL: '/Administration/BillingTagList',
                sDeleteURL: '',
                sAddURL: '',
                sUpdateURL: '',
                sNewDialogLoadURL: '',
                sEditDialogLoadURL: '',
                sDialogDivId: 'billingtag_dialog',
                bAutoWidth: false,
                oColumnDefs: columnDefs,
                sEntityName: 'Billing Tag'
            });

            //Set default focus on search text box and Disable invalid keys for search text box (Keys like <,>,~)
            SetFocus('#billingtag_tbl_filter label input:text');
            DisableInvalidKeyForControl('#billingtag_tbl_filter label input:text');
        });

        //Set the menu item as selected
        HighlightSelectedMenuItem("AdminMenu")
    </script>
}

<div class="pageTitle">
    Billing Line Tags
    <hr />
</div>

<table style="width: 100%">
    <tr>
        <td>

            <div>
                <table cellpadding="0" cellspacing="0" border="0" class="display" id="billingtag_tbl" width="100%">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.ID) </th>
                            <th>@Html.DisplayNameFor(model => model.Tag) </th>
                            <th>@Html.DisplayNameFor(model => model.Description) </th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </td>
    </tr>
</table>