@model ACS.MDB.Net.App.Models.UserModel

@{
    Layout = null;
}

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
{
    @Html.AntiForgeryToken()
    <table id="errorSummary">
        <tr>
            <td>
                @Html.ValidationSummary(true)
            </td>
        </tr>
    </table>

    <div id="frmChangePassword" style="background: #F9F7FB">
        <table>
            <tr>
                <td style="text-align: left; width: 150px;">Current @Html.LabelFor(m => m.Password, new { @class = "mandatoryLabel" })
                </td>
                <td style="text-align: left; width: 60px">
                    @Html.PasswordFor(m => m.Password, new { @minlength = "6", @maxlength = "15", @id = "txtPassword", @style = "width:150px" })
                </td>
            </tr>
            <tr>
                <td></td>
                <td style="text-align: left; width: 250px" colspan="3">
                    @Html.ValidationMessageFor(m => m.Password)
                </td>
            </tr>
            <tr>
                <td style="text-align: left; width: 150px;">
                    @Html.LabelFor(m => m.NewPassword, new { @class = "mandatoryLabel" })
                </td>
                <td style="text-align: left; width: 60px">
                    @Html.PasswordFor(m => m.NewPassword, new { @minlength = "6", @maxlength = "15", @id = "txtNewPassword", @style = "width:150px" })
                </td>
            </tr>
            <tr>
                <td></td>
                <td style="text-align: left; width: 250px" colspan="3">
                    @Html.ValidationMessageFor(m => m.NewPassword)
                </td>
            </tr>
            <tr>
                <td style="text-align: left; width: 150px;">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "mandatoryLabel" })
                </td>
                <td style="text-align: left; width: 60px">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @minlength = "6", @maxlength = "15", @id = "txtConfirmPassword", @style = "width:150px" })
                </td>
            </tr>
            <tr>
                <td></td>
                <td style="text-align: left; width: 250px" colspan="3">
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </td>
            </tr>
        </table>
    </div>

}

<script type="text/javascript">
    $('#txtPassword').focus();
</script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@Scripts.Render("~/bundles/jqueryval")